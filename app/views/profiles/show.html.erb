<section class="profile">
  <% if authenticated? %>

<%#= debug current_user.profile.email %>

      <h2>Your Profile</h2>
      
      <div class="column">
          <h3>DivePanda Details</h3>
          <dl>
            <dt>User Id</dt>
            <dd><%= @user.id %></dd>
            <dt>Email</dt>
            <dd><%= @user.email %></dd>
            <dt>Number of Dives</dt>
            <dd><%= @dive_count %></dd>
            <dt>Total bottom time from all dives</dt>
            <dd><%= @dive_time %></dd>
            <%#= #Add a way to include dives not entered in DP. Such as a starting point in the user profile. %>
          </dl>
      </div>
    
     <div class="column right grey_background">
          <h3>Information obtained from Facebook</h3>
          <dl>
            <div class="avatar">
                <fb:profile-pic uid="<%= current_user.try(:identifier) %>" size="small" facebook-logo="true"></fb:profile-pic>
            </div>
            <dt>Name</dt>
            <dd><%= current_user.profile.name %></dd>
            <dt>First Name</dt>
            <dd><%= current_user.profile.first_name %></dd>
            <dt>Last Name</dt>
            <dd><%= current_user.profile.last_name %></dd>
            <dt>Username</dt>
            <dd><%= current_user.profile.username %></dd>
            <dt>Identifier (ID)</dt>
            <dd><%= @facebook.identifier %></dd>
            <dt>Gender</dt>
            <dd><%= current_user.profile.gender %></dd>
            <dt>Facebook profile</dt>
            <dd><%= link_to current_user.profile.link, current_user.profile.link %></dd>
            <dt>Email</dt>
            <dd><%= current_user.profile.email %></dd>
            <dt>About</dt>
            <dd><%= current_user.profile.about %></dd>
            <dt>Birthday</dt>
            <dd><%= current_user.profile.birthday %></dd>
            <dt>Location</dt>
            <dd><%= current_user.profile.location.try(:name) %></dd>
            <dt>Verified</dt>
            <dd><%= current_user.profile.verified %></dd>
            <dt>Timezone</dt>
            <dd><%= current_user.profile.timezone %></dd>
            <dt>Locale</dt>
            <dd><%= current_user.profile.locale %></dd>
          </dl>
      </div>
    <% end %>  
</section>