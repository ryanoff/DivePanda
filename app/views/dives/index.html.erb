<%- model_class = Dive.new.class -%>
<h1>All Your Dives</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:date) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:city) %></th>
      <th><%= model_class.human_attribute_name(:country) %></th>
      <th><%#= model_class.human_attribute_name(:bottomtime) %>Time</th>
      <th><%= model_class.human_attribute_name(:depth) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @dives.each do |dive| %>
      <tr>
        <td><%= link_to dive.id, dive_path(dive) %></td>
        <td><%= dive.date %></td>
        <td><%= dive.name %></td>
        <td><%= dive.city %></td>
        <td><%= dive.country %></td>
        <td><%= dive.bottomtime %></td>
        <td><%= dive.depth %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_dive_path(dive), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      dive_path(dive),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add a new dive', new_dive_path, :class => 'btn btn-primary' %>