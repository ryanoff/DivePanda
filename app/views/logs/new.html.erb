<h1>Log a new dive</h1>

<%= form_for @log do |f| %>

	<fieldset>
		<div class="input text">
			<%= f.label :name, "Dive site name" %>
			<%= f.text_field :name %>
		</div>
	
		<div class="input text">
			<%= f.label :city %>
			<%= f.text_field :city %>
		</div>

		<div class="input text">
			<%= f.label :country %>
			<%= f.text_field :country %>
		</div>

		<div class="input text">
			<%= f.label :state %>
			<%= f.text_field :state %>
		</div>
						
		<div class="input text">
			<%= f.label :units %>
			<%= 
				@units = {'Metric (C, m)' => 'C', 'Imperial (F, ft)' => 'F'}		
				select_tag "units", options_for_select(@units)
			%>

		</div>	
	</fieldset>

	<fieldset>
		<legend>Dive Stats</legend>
		<div class="input text">
			<%= f.label :bottomtime %>
			<%= f.text_field :bottomtime %>
		</div>	
		
		<div class="input text">
			<%= f.label :depth %>
			<%= f.text_field :depth %>
		</div>
	</fieldset>

	<fieldset>
		<legend>Attributes</legend>
		<div class="input text">
			<%= f.label :weather %>
			<%= f.text_field :weather %>
		</div>
		
		<div class="input text">
			<%= f.label :temperature %>
			<%= f.text_field :temperature %>
		</div>
		
		<div class="input text">
			<%= f.label :watertemp %>
			<%= f.text_field :watertemp %>
		</div>
	
		<div class="input text">
			<%= f.label :equipment %>
			<%= f.text_field :equipment %>
		</div>
	</fieldset>	

	<fieldset>
		<legend>Details</legend>	
		<div class="input textarea">
			<%= f.label :description %>
			<%= f.text_area :description %>
		</div>
	
		<div class="input textarea">
			<%= f.label :comments %>
			<%= f.text_area :comments %>
		</div>
		
		<div class="input textarea">
			<%= f.label :directions %>
			<%= f.text_area :directions %>
		</div>


	
		<div class="input text">
			<%= f.label :rating %>
			<%= f.text_field :rating %>
		</div>
		
			
		<div class="input text">
			<%= f.label :longitude %>
			<%= f.text_field :longitude %>
		</div>
		
			
		<div class="input text">
			<%= f.label :latitude %>
			<%= f.text_field :latitude %>
		</div>

	</fieldset>
		
	<%= f.submit %>
	
<% end %>