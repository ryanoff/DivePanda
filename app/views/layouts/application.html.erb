<!DOCTYPE html>
<html>
<head>
  <title>DivePanda</title>
  <!-- [if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>

<div class="navbar navbar">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <a class="brand" href="/">DivePanda</a>
      <div class="nav-collapse">
        <ul class="nav">
        
          <%# Add if authenticated %>
          

  				<% if user_signed_in? %>

    				<li>Hello <%= current_user.email %> <%#= link_to current_user.email, :controller => "home", :action => "dashboard" %></li>              
                
            <li><%# link_to 'Dashboard', dashboard_path %></li>
            <li><%= link_to 'Dives', dives_path %></li>
            <li><%# link_to "Profile" %></li>
            <li><%# link_to "Sign out", facebook_path, :method => :delete %></li>	    
            <li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
                      

          <% else %>    
              
            <%# Add if not authenticated %>
            <li><%= link_to content_tag(:span, 'Log In'), user_omniauth_authorize_path(:facebook), :class => "btn-facebook-small" %></li>
            <li><%#= link_to('Sign In', new_user_session_path)  %></li>
            <li><%= link_to "About", :controller => "pages", :action => "about" %></li>
            <li><%= link_to 'Contact', :controller => "pages", :action => "contact" %></li>

          <% end %>


        </ul>
      </div>
    </div>
  </div>
</div>

  <div class="container">
    <!--  
    <p class="notice"><%# notice %></p>
    <p class="alert"><%# alert %></p>
    -->
    <div class="row">
      <%= yield %>
    </div>
  </div>
  
</div>
<%= render 'layouts/footer' %>

</body>
</html>
